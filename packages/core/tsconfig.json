{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "dist",
		"strict": true,
		"lib": ["dom"],
		"strictNullChecks": true,
		"declarationDir": "dist",
		"allowUnreachableCode": true,
		"allowJs": false,
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"declaration": true,
		"composite": true
	},
	"include": ["./src/**/*.ts"]
}
